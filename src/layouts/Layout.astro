---
import favicon from "@assets/favicon.ico";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Shawn Yama's portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css"
    />
    <link rel="icon" href={favicon} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script
      type="text/partytown"
      src="https://cloud.umami.is/script.js"
      data-website-id="ff1d9ede-be99-4501-ba7a-4bf7ae0a9b83"></script>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@700&family=Fira+Sans:wght@400;600&display=swap");
  @font-face {
    font-family: "RPGSystem";
    src: url("../../fonts/RPGSystem.ttf");
    font-display: swap;
  }

  :root {
    --green-tint: hsl(130, 41%, 91%);
    --green-pastel: hsl(132, 39%, 83%);
    --deep-sea: hsl(186, 70%, 12%);
    --strawberry: hsl(0, 85%, 72%);
  }

  * {
    padding: 0;
    margin: 0;
  }

  html {
    font-family: "Fira Sans", sans-serif;
    font-weight: 400;
    background-color: var(--green-pastel);
    color: var(--deep-sea);
    height: 100%;
    overflow-x: hidden;
    scroll-behavior: smooth;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  ::selection {
    background: hsla(0, 79%, 72%, 0.4);
  }

  ::-webkit-scrollbar {
    width: 15px;
  }

  ::-webkit-scrollbar-track {
    background-color: var(--green-tint);
  }

  ::-webkit-scrollbar-thumb {
    background-color: var(--strawberry);
    border-radius: 20px;
    border: 0.35rem solid transparent;
    background-clip: padding-box;
  }

  main > section {
    max-width: 65%;
    margin: auto;
    background-color: whitesmoke;
    margin-top: 2rem;
    padding: 1rem;
    border-radius: 0.5rem;
    transition: 0.25s;
    border: 1px dotted var(--strawberry);
    box-shadow: 5px 4px var(--strawberry);
  }

  h1,
  h2,
  h3 {
    font-family: "Cormorant Garamond", serif;
    color: var(--strawberry);
  }

  a {
    color: var(--strawberry);
    text-decoration: none;
    border-radius: 0.25rem;
  }
  a:hover {
    text-decoration: underline;
  }

  h2 {
    font-size: 3rem;
    display: flex;
    align-items: center;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid lightgrey;
    text-transform: uppercase;
  }

  h2 > img,
  h2 > svg {
    height: 2.5rem;
    width: fit-content;
    padding-right: 1rem;
  }

  svg {
    color: var(--deep-sea);
  }

  p {
    font-size: 1.2rem;
    line-height: 1.4;
  }

  .technologies {
    border: 3px double var(--strawberry);
    border-radius: 0.5rem;
    color: var(--strawberry);
    margin-top: 1rem;
    background-color: var(--green-tint);
  }

  .technologies h3 {
    font-size: 1.25rem;
    width: fit-content;
    padding: 0 1rem;
    margin: auto;
    margin-top: -0.8rem;
    background: linear-gradient(whitesmoke, var(--green-tint));
  }
  ul {
    list-style: none;
  }
  .technologies ul {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
  }

  .technologies li {
    flex: 0 0 15%;
    margin: 0.5rem 0;
  }

  .technologies li > div {
    width: fit-content;
    border-radius: 0.5rem;
    padding: 0.15rem 0.3rem 0.2rem 0.3rem;
    font-size: 1rem;
    color: var(--strawberry);
    background-color: var(--green-pastel);
    text-align: center;
    margin: auto;
  }

  .technologies li > .icon {
    background-color: transparent;
    height: min-content;
    font-size: 3rem;
    min-height: 2rem;
  }

  @media (max-width: 1600px) {
    main > section {
      max-width: 85%;
    }
  }

  @media (max-width: 1200px) {
    .technologies li > .icon {
      display: none;
    }
  }

  @media (max-width: 800px) {
    main > section {
      max-width: 100%;
      margin-top: 1rem;
      border-radius: 0;
      padding: 1rem 0.5rem;
      box-shadow: none;
    }
  }
</style>
